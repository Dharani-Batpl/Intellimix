        var row = $(this).closest('tr');
        deleteId = row.data('id');
        $('#deleteItemName').text(row.find('td:eq(1)').text()); // Type Name
        deleteModal.show();
    });

    // CONFIRM DELETE
    $('#confirmDeleteBtn').click(function () {
        if (!deleteId) return;

        $.ajax({
            url: '/MaterialType/DeleteMaterial',
            type: 'POST',
            data: { id: deleteId }, // send as form data
            success: function (data) {
                alert(data.message);
                if (data.success) {
                    deleteModal.hide();
                    // Remove row from table without reload
                    $('#materialTable').find(`tr[data-id="${deleteId}"]`).remove();
                }
            },
            error: function () {
                alert("❌ Error deleting material type");
            }
        });
    });


    // CSV Import
    document.getElementById('csvFileInput').addEventListener('change', function(){
        const file = this.files[0];
        if(!file) return;
        const formData = new FormData(); formData.append('file', file);
        fetch('/MaterialType/ImportCsv', { method:'POST', body:formData })
        .then(res=>res.json())
        .then(data=>{
            alert(data.success ? data.message : "❌ Import failed: " + data.message);
            if(data.success) location.reload();
        }).catch(err=>{ console.error(err); alert("❌ Unexpected error during CSV import"); });
    });
});
