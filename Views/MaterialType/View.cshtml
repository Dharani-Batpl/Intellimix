    $(document).ready(function () {

        var materialModal = new bootstrap.Modal($('#materialModal')[0]);
        var deleteModal = new bootstrap.Modal($('#deleteModal')[0]);
        var materialForm = $('#materialForm');
        var deleteId = null;

        // EDIT BUTTON
        $('#materialTable').on('click', '.edit-btn', function () {
            var row = $(this).closest('tr'); // the <tr> containing the clicked button
            var id = row.data('id');

            materialForm[0].dataset.id = id;

            // Fill modal fields
            $('input[name="material_type_code"]').val(row.find('td:eq(0)').text()).prop('readonly', true).addClass('readonly-field');
            $('input[name="material_type_name"]').val(row.find('td:eq(1)').text());
            $('textarea[name="description"]').val(row.find('td:eq(2)').text());
            $('input[name="default_storage_condition"]').val(row.find('td:eq(3)').text());

            var status = row.find('td:eq(4) .badge').text().trim();
            $('input[name="active_flag"][value="' + (status == "Active") + '"]').prop('checked', true);

            $('#materialModalLabel').text("Edit Material Type");
            materialForm.find('button[type="submit"]').text("Update");
            materialModal.show();
        });

        // DELETE BUTTON
        $('#materialTable').on('click', '.delete-btn', function () {
            var row = $(this).closest('tr');
            deleteId = row.data('id');
            $('#deleteItemName').text(row.find('td:eq(1)').text()); // Type Name
            deleteModal.show();
        });

    });


    // Add Button
    document.getElementById('addBtn').addEventListener('click', function () {
        materialForm.reset();
        materialForm.dataset.id = "";
        document.querySelector('input[name="material_type_code"]').readOnly = false;
        document.querySelector('input[name="material_type_code"]').classList.remove('readonly-field');
        document.getElementById('materialModalLabel').innerText = "Add Material Type";
        document.querySelector('#materialForm button[type="submit"]').innerText = "Save Material Type";
        materialModal.show();
    });

    // Submit Add/Edit
    materialForm.addEventListener('submit', function(e){
        e.preventDefault();
        var id = materialForm.dataset.id;
        var formData = new FormData(materialForm);
        var payload = {
            material_type_code: formData.get('material_type_code'),
            material_type_name: formData.get('material_type_name'),
            description: formData.get('description'),
            default_storage_condition: formData.get('default_storage_condition'),
            active_flag: formData.get('active_flag')==='true'
        };
        var url = id ? `/MaterialType/UpdateMaterial?id=${id}` : materialForm.action;

        fetch(url, { method:'POST', headers:{'Content-Type':'application/json'}, body:JSON.stringify(payload) })
