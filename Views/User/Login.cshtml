@{
    Layout = null;
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #e9efff, #f4f6fb);
        }

        .login-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .login-card {
            background: #fff;
            border-radius: 12px;
            width: 500px;
            height: 500px;
            padding: 40px 35px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .login-card:hover {
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            }

            .login-card h2 {
                text-align: center;
                margin-bottom: 30px;
                font-weight: 600;
                color: #162966;
            }

        .form-label {
            font-weight: 500;
            color: #162966;
        }

        .form-control {
            border-radius: 6px;
            padding: 10px 12px;
            font-size: 0.95rem;
        }

            .form-control:focus {
                border-color: #162966;
                box-shadow: 0 0 6px rgba(22, 41, 102, 0.3);
            }

        .btn-login {
            background: linear-gradient(90deg, #162966, #1f3d8c);
            color: #fff;
            border-radius: 6px;
            padding: 10px;
            font-weight: 500;
            width: 100%;
            border: none;
            transition: all 0.3s ease;
            box-shadow: 0 3px 10px rgba(22, 41, 102, 0.3);
            margin-top: 20px;
        }

            

        .login-footer {
            text-align: center;
            color: #888;
            font-size: 0.85rem;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div>
                <h2>Sign In</h2>
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center">@ViewBag.Error</div>
                }
                <form method="post" action="@Url.Action("Login", "User")">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" name="username" id="username" class="form-control" placeholder="Enter username" required />
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="Password" required />
                    </div>
                    <button type="submit" class="btn btn-login">Login</button>
                </form>
            </div>

            <div class="login-footer">
                &copy; @DateTime.Now.Year - Inventory Management System
            </div>
        </div>
    </div>
</body>
</html>
